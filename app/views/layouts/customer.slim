head
  meta charset="utf-8"

  / Uncomment to make IE8 render like IE7
  / meta http-equiv="X-UA-Compatible" content="IE=7"

  = favicon_link_tag 'favicon.ico'

  / Set the viewport width to device width for mobile
  meta name="viewport" content="width=device-width, initial-scale=1.0"

  title= content_for?(:title) ? yield(:title) : "Angry Monkey Fishing Lures"

  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  = csrf_meta_tag

  javascript:
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-62456037-1', 'auto');
    ga('send', 'pageview');

body.body

  div.wrapper
    div.home-header
      =link_to(image_tag("logo_aml_long.png", style: "height: 235px"), root_path)

    div.menubar
      =link_to("Home", root_path)
      =" | "
      =link_to("Lures", lure_types_path)
      =" | "
      =link_to("Sold Locally", stores_path)
      =" | "
      =link_to("Contact Us", contact_us_path)
      =" | "
      =link_to("About", about_path)
      =" | "
      span
        form style="display:block;margin:-30px -30px 0 0;" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="paypal"
          input name="cmd" type="hidden" value="_s-xclick"
          input name="encrypted" type="hidden" value=("-----BEGIN PKCS7----------END PKCS7-----\n")
          input border="0" name="submit" src=image_path('buttons/cart.png') type="image"

    hr

    div.content
      == yield

  = javascript_include_tag "application"

footer.footer
  p &copy; Copyright 2015 Angry Monkey Fishing Lures LLC.
  div
    p
      =link_to("Login", new_user_session_path)
